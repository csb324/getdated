-if user_signed_in?
  .row#show-all-users
    %h2.page-title Your matches
    -@users.each do |user|
      .your-match.row
        .small-10.columns
          =image_tag(user.image.url(:square_100))
          .user-info
            %h3= link_to user.display_name, user_path(user)
            %span #{user.age}, #{user.location.capitalize}
        .small-2.columns
          %h3= user.match_with(current_user)
-else
  .welcome
    %h3 Welcome to Just Duet, a dating site with MUSIC
    %h3= link_to "Sign in with Spotify", user_omniauth_authorize_url(:spotify), id: "sign-in-link"
