.row
  .small-12.columns
    %h1 Just Duet!
    -if !user_signed_in?
      %h3= link_to "sign in", user_omniauth_authorize_url(:spotify), id: "sign-in-link"
    -else
      %h5= link_to "sign out", destroy_user_session_path, method: :delete

.row#show-all-users
  .large-12.columns
    -if user_signed_in?
      -@users.each do |user|
        .your-match.row
          .small-10.columns
            =image_tag(user.image.url(:square_100))
            .user-info
              %h3= link_to user.display_name, user_path(user)
              %span= user.age
          .small-2.columns
            %h3= user.match_with(current_user)

