.row.edit-profile
  %h2 Edit Your Profile
  = link_to "Back", :back
  %br
  %br
  %br
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
    = devise_error_messages!

    = render 'shared/form_part', f: f, user: current_user

    .row
      %input#submit{:class => "submit-button button small", :name => "submit", :type => "submit", :value => "Update"}/

  %h3 Cancel my account
  %p Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
